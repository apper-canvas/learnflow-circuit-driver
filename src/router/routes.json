{
  "/login": {
    "allow": {
      "when": {
        "conditions": [
          {
            "label": "Login page is public",
            "rule": "public"
          }
        ]
      },
      "excludeRedirectQuery": true
    }
  },
  "/signup": {
    "allow": {
      "when": {
        "conditions": [
          {
            "label": "Signup page is public",
            "rule": "public"
          }
        ]
      },
      "excludeRedirectQuery": true
    }
  },
  "/callback": {
    "allow": {
      "when": {
        "conditions": [
          {
            "label": "Callback page is public",
            "rule": "public"
          }
        ]
      },
      "excludeRedirectQuery": true
    }
  },
  "/error": {
    "allow": {
      "when": {
        "conditions": [
          {
            "label": "Error page is public",
            "rule": "public"
          }
        ]
      },
      "excludeRedirectQuery": true
    }
  },
  "/prompt-password/*": {
    "allow": {
      "when": {
        "conditions": [
          {
            "label": "Prompt password page is public",
            "rule": "public"
          }
        ]
      },
      "excludeRedirectQuery": true
    }
  },
  "/reset-password/*": {
    "allow": {
      "when": {
        "conditions": [
          {
            "label": "Reset password page is public",
            "rule": "public"
          }
        ]
      },
      "excludeRedirectQuery": true
    }
  },
  "/": {
    "allow": {
      "when": {
        "conditions": [
          {
            "label": "User must be logged in",
            "rule": "authenticated"
          }
        ]
      },
      "redirectOnDeny": "/login"
    }
  },
  "/courses": {
    "allow": {
      "when": {
        "conditions": [
          {
            "label": "User must be logged in to view courses",
            "rule": "authenticated"
          }
        ]
      },
      "redirectOnDeny": "/login"
    }
  },
  "/courses/*": {
    "allow": {
      "when": {
        "conditions": [
          {
            "label": "User must be logged in to view course details",
            "rule": "authenticated"
          }
        ]
      },
      "redirectOnDeny": "/login"
    }
  },
  "/courses/*/lessons/*": {
    "allow": {
      "when": {
        "conditions": [
          {
            "label": "User must be logged in to view lessons",
            "rule": "authenticated"
          }
        ]
      },
      "redirectOnDeny": "/login"
    }
  },
  "/my-learning": {
    "allow": {
      "when": {
        "conditions": [
          {
            "label": "User must be logged in to view their learning",
            "rule": "authenticated"
          }
        ]
      },
      "redirectOnDeny": "/login"
    }
  },
  "/profile": {
    "allow": {
      "when": {
        "conditions": [
          {
            "label": "User must be logged in to view profile",
            "rule": "authenticated"
          }
        ]
      },
      "redirectOnDeny": "/login"
    }
  },
  "/certificates/*": {
    "allow": {
      "when": {
        "conditions": [
          {
            "label": "User must be logged in to view certificates",
            "rule": "authenticated"
          }
        ]
      },
      "redirectOnDeny": "/login"
    }
  }
}